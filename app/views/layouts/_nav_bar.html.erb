<%= nav_bar fixed: :top, responsive: true do %>
  <%= menu_group do %>
    <a class="brand" href="/"><%= image_tag "logo5.png", size: "55x55" %></a>
  <% end %>

  <div id="nav-row">
    <%= menu_group do %>
      <div id="store-name">
          <%= link_to "Keevahh", root_path if !(current_user && current_user.admin?) %>
          <%= "Keevahh" if (current_user && current_user.admin?) %>
      </div>

      <%= menu_item "Lend", projects_path if !(current_user && current_user.admin?) %>
      <%= menu_item "Admin Dashboard", admin_dashboard_path if current_user && current_user.admin? %>
      <%= menu_item "All Borrowers", admin_tenants_path if current_user && current_user.admin? %>
    <% end %>

    <%= menu_group pull: :right do %>
      <% if current_user.nil? %>
      	<%= menu_item "Signup", new_user_path %>
        <%= menu_item do %>
          <%= form_for :session, url: login_path, :html => {class: 'navbar-form pull-right'} do |f| %>
            <%= f.text_field :username, :placeholder => 'username' %>
            <%= f.password_field :password, :placeholder => 'password' %>
            <%= f.submit 'Login' %>
          <% end %>
        <% end %>
      <% else %>
        <%= menu_item "Loans", user_orders_path(user_id: current_user.id) %>
        <%= menu_item "Logout", logout_path %>
        <% unless current_user.admin? %>
          <%= menu_item "Profile", user_path(current_user) %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
